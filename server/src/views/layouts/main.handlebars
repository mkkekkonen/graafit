<!DOCTYPE html>
<html>
  <head>
    <title>Graph Theory</title>
    <link rel="stylesheet" type="text/css" href="{{urlBase}}/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="{{urlBase}}/css/bootstrap-reboot.css" />
    <link rel="stylesheet" type="text/css" href="{{urlBase}}/css/bootstrap-grid.css" />
    <link rel="stylesheet" type="text/css" href="{{urlBase}}/css/style.css" />

    <script src="{{urlBase}}/js/jquery-3.4.1.js"></script>
    <script src="{{urlBase}}/js/popper.min.js"></script>
    <script src="{{urlBase}}/js/bootstrap.js"></script>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2 nav-container">
          <div class="accordion" id="mainMenu">
            {{#each categories}}
              <div class="card">
                <div class="card-header" id="{{headerId id}}">
                  <h2 class="mb-0">
                    <button
                      class="btn btn-link"
                      type="button"
                      data-toggle="collapse"
                      data-target="#{{submenuId id}}"
                      aria-expanded="false"
                      aria-controls="{{submenuId id}}"
                    >
                      {{name}}
                    </button>
                  </h2>
                </div>

                <div
                  id="{{submenuId id}}"
                  class="collapse {{#if (isCurrentCategory ../category id)}}show{{/if}}"
                  aria-labelledby="{{headerId id}}"
                  data-parent="#mainMenu"
                >
                  {{#each ../pages}}
                    {{#if (isChild categoryId ../id)}}
                      <div class="card-body">
                        <a class="btn btn-link page-link" href="{{urlBase}}/{{toUrlFormat ../name}}/{{toUrlFormat name}}">
                          {{name}}
                        </a>
                      </div>
                    {{/if}}
                  {{/each}}
                </div>
              </div>
            {{/each}}

            <div class="card">
              <div class="card-body">
                <a class="btn btn-link" href="{{urlBase}}/sources/">Sources</a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-10">
          {{{body}}}
        </div>
      </div>
    </div>
  </body>
</html>
